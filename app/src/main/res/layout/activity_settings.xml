<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/change_prefs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="changeSettings"
        android:text="Zmień ustawienia" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_prefs_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <TableRow>

            <TextView android:text="Światło:" />

            <TextView
                android:id="@+id/light"
                android:text="włączone" />
        </TableRow>

        <TableRow>

            <TextView android:text="Pralka:" />

            <TextView
                android:id="@+id/washing_machine"
                android:text="wyłączona" />
        </TableRow>

        <TableRow>

            <TextView android:text="Imię:" />

            <TextView
                android:id="@+id/name"
                android:text="Adam" />
        </TableRow>

        <TableRow>

            <TextView android:text="Zwierzątko:" />

            <TextView
                android:id="@+id/animal"
                android:text="kot"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_marginRight="10dp"
                android:text="Smak lodów:"/>
            <TextView
                android:id="@+id/ice_cream_flavour"
                android:text="czekoladowe"/>
        </TableRow>

        <TableRow>
            <TextView android:text="Dzwonek:" />
            <TextView
                android:id="@+id/ringtone"
                android:text="Aserehe"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>